<structure xmlns="https://cmln.github.io/chameleon/schema/3.0/layout.rng">

	<component type="Container" class="top-header">
		<row>
			<cell span="12">
				<component type="Html"><![CDATA[
					<div class="left-part pull-left">Triple Performance</div>
					<div class="right-part pull-right hidden-xs">
						A la recherche d'une meilleure performance agro-écologique !

						<div class="social-links">
							<a href="https://www.facebook.com/tripleperformance" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur Facebook"><span class="fab fa-facebook"></span>  </a>
							<a href="https://twitter.com/neayi_com" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur Twitter"><span class="fab fa-twitter"></span>  </a>
							<a href="mailto:contact@neayi.com" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Envoyez-nous un e-mail"><span class="fa fa-envelope"></span>  </a>
						</div>
					</div>
			]]></component>
			</cell>
		</row>
	</component>

	<component type="NavbarHorizontal">
		<modification type="Sticky"/>
		<component type="Logo" position="head"/>
		<component type="NavMenu" flatten="navigation"/>
		<component type="Menu" message="secondary-menu"/>
		<component type="PageTools" class="flex-row" position="right" hideDiscussionLink="yes" buttons="edit, watch, unwatch" hideSelectedNameSpace="no" />
		<component type="SearchBar" class="order-first order-cmln-0" position="right" buttons="go" placeholder="Rechercher" />
		<component type="PersonalTools" position="right"/>
	</component>

	<grid mode="fluid" class="flex-fill WikiMainContent">
		<row>
			<cell span="12">
				<component type="SiteNotice"/>
			</cell>
		</row>

		<row>
			<cell span="12">
				<component type="Container" class="row mx-auto mainContainer">
					<component type="Container" class="leftSide col col-3 d-xl-block d-none"></component>
					<component type="MainContent" class="centralDiv col col-12 col-xl-6"/>
					<component type="Container" class="rightSide col col-12 col-xl-3">
						<component type="Html"><![CDATA[
					<div id="NeayiInteractions"></div>
				]]></component></component>
				</component>
			</cell>
		</row>
	</grid>

	<grid class="footer py-5">
		<row>
			<cell span="12">
				<component type="Html"><![CDATA[
        <div class="col-md-10 offset-md-1">
            <div class="row align-items-center">
                <div class="col-md-12 pb-4">
                    <img src="/skins/skin-neayi/favicon/logo-triple-performance.svg" class="img-fluid mb-md-0 mb-3">
                </div>
			</div>
			<div class="row">
                <div class="col-md-4">
					<p class="footer-title">Triple Performance</p>
                    <ul class="list-unstyled">
                        <li><a href="/wiki/%C3%80_propos">À propos</a></li>
                        <li><a href="/wiki/Partenaires">Partenaires</a></li>
                        <li><a href="/wiki/Manifeste_de_la_plateforme_Triple_Performance">Pourquoi ?</a></li>
                        <li><a href="/wiki/Comment_fonctionne_la_plateforme">Comment ça fonctionne ?</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
					<p class="footer-title">Légal</p>
                    <ul class="list-unstyled">
                        <li><a href="/wiki/Charte_d%E2%80%99utilisation">Conditions d'utilisation</a></li>
                        <li><a href="/wiki/Triple_Performance:Politique_de_confidentialit%C3%A9">Mentions légales</a></li>
                        <li><a href="/wiki/Open_Source">Open Source</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
					<p class="footer-title">Fait avec ♡ par Neayi</p>
                    <ul class="list-unstyled">
                        <li><a href="https://neayi.com/contact/">Contact</a></li>
                        <li>Nous retrouver sur 
						<span class="social-links">
							<a href="https://www.facebook.com/tripleperformance" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur Facebook"><span class="fab fa-facebook-f"></span>  </a>
							<a href="https://twitter.com/neayi_com" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur Twitter"><span class="fab fa-twitter"></span>  </a>
							<a href="https://www.linkedin.com/company/neayi" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur LinkedIn"><span class="fab fa-linkedin-in"></span>  </a>
						</span></li>
                    </ul>
                </div>

            </div>

        </div>
			]]></component>
			</cell>
		</row>

		<row>
			<modification type="ShowOnlyFor" group="sysop" />
			<cell>
				<component type="NavbarHorizontal" collapsible="no" class="small mb-2" >
					<component type="Toolbox" flatten="no" class="dropup"/>
					<component type="LangLinks" flatten="no" class="dropup"/>
				</component>
			</cell>
		</row>

	</grid>	


</structure>
