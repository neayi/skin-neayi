<structure xmlns="https://cmln.github.io/chameleon/schema/3.0/layout.rng">

	<component type="NavbarHorizontal">
		<modification type="Sticky"/>
		<component type="Logo" position="head"/>
		<component type="NavMenu" flatten="navigation"/>
		<component type="Menu" message="secondary-menu"/>
		<component type="PageTools" class="flex-row my-auto" hideDiscussionLink="yes" buttons="" hideSelectedNameSpace="no" />
		<component type="SearchBar" class="order-first order-cmln-0 my-auto" position="right" buttons="go" placeholder="Rechercher" />
		<component type="PersonalTools" class="my-auto"/>
		<component type="Container" position="right" class="create-profile"><component type="Html">
			<![CDATA[<div class="row align-items-center" id="neayi-createaccount" style="margin: 0; height: 100%;">
			 	<div class="col text-center"><a class="neayi-username my-auto mx-auto" href="/index.php?title=Sp%C3%A9cial:Connexion&returnto=Accueil">Créez votre profil</a></div>
			</div>]]></component></component>
	</component>

	<grid mode="fluid" class="flex-fill WikiMainContent">
		<row>
			<cell span="12">
				<component type="SiteNotice"/>
			</cell>
		</row>

		<row>
			<cell span="12">
				<component type="Container" class="row ml-auto mainContainer">
					<component type="Container" class="leftSide col-auto d-xl-block d-none"></component>
					<component type="Container" class="centralDiv col">
						<component type="MainContent" class=""></component>
					</component>
					<component type="Container" class="rightSide col-auto d-lg-block d-none">
					<component type='Html'><![CDATA[<div class="interaction-bloc">
					<div class="interaction-top">
						<span id="interaction-title">&nbsp;</span>
						<div class="container px-0 interaction-buttons">
							<div class="row mx-n1">
								<div class="col-auto px-1">
									<button class="btn btn-dark-green text-white neayi-interaction-applause" type="button">
										<img src="/extensions/NeayiInteractions/images/clap.svg" width="28">
									</button>
									<br><span class="neayi-interaction-applause-label">&nbsp;</span>
								</div>
								<div class="col px-1">
									<button class="w-100 btn btn-dark-green text-white neayi-interaction-suivre" type="button">Suivre</button>
									<br><span class="neayi-interaction-suivre-label">&nbsp;</span>
								</div>
								<div class="col px-1">
									<button class="w-100 btn btn-dark-green text-white neayi-interaction-doneit" type="button">Je le fais</button>
									<br><span class="neayi-interaction-doneit-label">&nbsp;</span>
								</div>				
							</div>
						</div>
					</div>
					<div class="container px-0 interaction-links">
						<div class="row mx-0">
							<div class="col pl-0 pr-1"><a class="w-100 btn btn-dark-green button comments-link" href="#cs-comments">
									<span class="material-icons mr-1 align-middle" aria-hidden="true">arrow_downward</span>
									<span class="questions-text">Poser une question</span></a></div>
							<div class="col-auto px-0 dropdown" id="neayi-interaction-desktop-menu">
								<button class="menu btn btn-dark-green" type="button" data-toggle="dropdown" data-boundary="viewport" aria-haspopup="true" aria-expanded="false">
									<span class="material-icons" aria-hidden="true">more_vert</span>
								</button>
							</div>
						</div>
					</div>
				</div>]]></component>
					
					</component>
				</component>
			</cell>
		</row>
	</grid>

	<grid class="footer py-5">
		<row>
			<cell span="12">
				<component type="Html"><![CDATA[
        <div class="col-md-10 offset-md-1">
            <div class="row align-items-center">
                <div class="col-md-12 pb-4">
                    <img src="/skins/skin-neayi/favicon/logo-triple-performance.svg" class="img-fluid mb-md-0 mb-3">
                </div>
			</div>
			<div class="row">
                <div class="col-md-4">
					<p class="footer-title">Triple Performance</p>
                    <ul class="list-unstyled">
                        <li><a href="/wiki/%C3%80_propos">À propos</a></li>
                        <li><a href="/wiki/Partenaires">Partenaires</a></li>
                        <li><a href="/wiki/Manifeste_de_la_plateforme_Triple_Performance">Pourquoi ?</a></li>
                        <li><a href="/wiki/Comment_fonctionne_la_plateforme">Comment ça fonctionne ?</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
					<p class="footer-title">Légal</p>
                    <ul class="list-unstyled">
                        <li><a href="/wiki/Charte_d%E2%80%99utilisation">Conditions d'utilisation</a></li>
                        <li><a href="/wiki/Triple_Performance:Politique_de_confidentialit%C3%A9">Mentions légales</a></li>
                        <li><a href="/wiki/Open_Source">Open Source</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
					<p class="footer-title">Fait avec ♡ par Neayi</p>
                    <ul class="list-unstyled">
                        <li><a href="https://neayi.com/contact/">Contact</a></li>
                        <li>Nous retrouver sur 
						<span class="social-links">
							<a href="https://www.facebook.com/tripleperformance" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur Facebook"><span class="fab fa-facebook-f"></span>  </a>
							<a href="https://twitter.com/neayi_com" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur Twitter"><span class="fab fa-twitter"></span>  </a>
							<a href="https://www.linkedin.com/company/neayi" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Suivez nous sur LinkedIn"><span class="fab fa-linkedin-in"></span>  </a>
						</span></li>
                    </ul>
                </div>

            </div>

        </div>
			]]></component>
			</cell>
		</row>

		<row>
			<modification type="ShowOnlyFor" group="sysop" />
			<cell>
				<component type="NavbarHorizontal" collapsible="no" class="small mb-2" >
					<component type="Toolbox" flatten="no" class="dropup"/>
					<component type="LangLinks" flatten="no" class="dropup"/>
				</component>
			</cell>
		</row>

	</grid>	


</structure>
